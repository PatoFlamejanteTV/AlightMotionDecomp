<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_avatar_user"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        app:srcCompat="@drawable/vector_user_profile"/>
    <ImageView
        android:id="@+id/iv_badge_user"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignTop="@+id/iv_avatar_user"
        android:contentDescription="@null"
        android:layout_alignEnd="@+id/iv_avatar_user"
        app:srcCompat="@drawable/shape_notifications_bubble"/>
</RelativeLayout>
